<!DOCTYPE html>
<html>
<head>
  <title>Cfmdb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">CFMDB</a>
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to "Search form", "/path1"  %> </li>
          <li class="dropdown">
            <%= link_to 'Browse by <b class="caret"></b>'.html_safe, request.path, :id => 'setupdrop', :'data-toggle' => 'dropdown', :class => 'dropdown-toggle' %>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Title", request.path %> </li>
              <li><%= link_to "Genre", request.path %> </li>
              <li><%= link_to "Cast Member", request.path %> </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= bootstrap_flash %>
        <%= yield %>
      </div>
    </div><!--/row-->

    <footer>
    </br>
      <p>&copy; KF 2015</p>
    </footer>
  </div> <!-- /container -->
</body>
</html>
