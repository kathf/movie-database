<h1> Search Results </h1>

<div class = "container">
  <div class = "row">

    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item list-group-item-warning">Movies</li>
        <%= render partial: 'movie', collection: @movie_results, as: 'result' %>
      </ul>
    </div>

    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item list-group-item-warning">Genres</li>
        <%= render partial: 'genre', collection: @genre_results, as: 'result' %>
      </ul>
    </div>

    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item list-group-item-warning">Directors</li>
        <%= render partial: 'director', collection: @director_results, as: 'result' %>
      </ul>
    </div>

    <div class="col-sm-3">
      <ul class="list-group">
        <li class="list-group-item list-group-item-warning">Cast Members</li>
        <%= render partial: 'cast', collection: @cast_results, as: 'result' %>
      </ul>
    </div>
  </div>
</div>
